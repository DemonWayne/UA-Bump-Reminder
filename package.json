{
  "name": "ua-bump-reminder",
  "version": "0.6.0",
  "description": "bump reminder ua",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -b src",
    "watch": "tsc -b src -w",
    "start": "node --enable-source-maps .",
    "watch:start": "tsc-watch  -b src --onSuccess \"node dist/index.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DemonWayne/UA-Bump-Reminder"
  },
  "author": "DemonWayne",
  "license": "Apache-2.0",
  "include": [
    "src/**/*",
    "package.json"
  ],
  "imports": {
    "#lib/*": "./dist/lib/*.js",
    "#models/*": "./dist/models/*.js",
    "#types/*": "./dist/lib/types/*.js",
    "#utils/*": "./dist/lib/utils/*.js"
  },
  "dependencies": {
    "@sapphire/decorators": "^5.0.0",
    "@sapphire/framework": "^3.1.4",
    "@sapphire/plugin-logger": "^3.0.1",
    "discord-api-types": "^0.37.20",
    "discord.js": "^13.12.0",
    "dotenv": "^16.0.3",
    "mongoose": "^6.7.2"
  },
  "devDependencies": {
    "@sapphire/eslint-config": "^4.3.8",
    "@sapphire/prettier-config": "^1.4.4",
    "@sapphire/ts-config": "^3.3.4",
    "prettier": "^2.7.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.9.3"
  }
}
