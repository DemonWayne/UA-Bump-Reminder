{
  "extends": "@sapphire/ts-config",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "../dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "#lib/*": ["lib/*"],
      "#models/*": ["models/*"],
      "#types/*": ["lib/types/*"],
      "#utils/*": ["lib/utils/*"],
      "#root/*": ["*"]
    },
    "composite": true,
    "moduleResolution": "Node",
  },
  "include": [".", "./**/*.json"],
  "exclude": ["./tsconfig.json"]
}
